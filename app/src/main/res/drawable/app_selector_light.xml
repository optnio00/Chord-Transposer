<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">
 
     <item android:state_focused="false" android:state_pressed="false">
     
	      <shape xmlns:android="http://schemas.android.com/apk/res/android">
		     <gradient
		         android:startColor="@color/scheme_light_bubble"
		         android:endColor="@color/scheme_light_bubble"
		         android:angle="270" />
		     <corners
		         android:radius="3dp" />
		     <padding
		         android:left="2dp"
		         android:top="2dp"
		         android:right="2dp"
		         android:bottom="2dp" />
	 	</shape>
     </item>
     <item android:state_pressed="true" android:drawable="@drawable/pressed_shape"/>
           
     <item android:state_focused="true" android:drawable="@drawable/focused_shape"/>
 </selector>